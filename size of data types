#include<stdio.h>
int main() {
    int IntDataType;
    float FloatDataType;
    double DoubleDataType;
    char CharDataType;

    
    printf("Size of int: %u bytes \n", sizeof(IntDataType));
    printf("Size of float: %u bytes\n", sizeof(FloatDataType));
    printf("Size of double: %u bytes\n", sizeof(DoubleDataType));
    printf("Size of char: %u byte\n", sizeof(CharDataType));
    
    return 0;
}
