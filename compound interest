#include <stdio.h>
int main ()
{
    float P,R,T,CI;
    printf ("Enter principal amount :");
    scanf ("%f",&P);
    printf ("Enter rate of interest in percentage :");
    scanf ("%f",&R);
    printf ("Enter time period in years :");
    scanf ("%f",&T);
    CI = P * (pow(1+R/100, T) - 1);
    printf("Compound Interest is %f " ,  CI);
    return 0;
}
